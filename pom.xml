<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>ultimate</groupId>
    <artifactId>KaroToolsCollection</artifactId>
    <packaging>pom</packaging>
    <version>1.0.0</version>
    <name>ultimate's Karopapier Tools Collection</name>
    <url>http://www.karopapier.de</url>
	
	<modules>
		<module>KaroAPI4J</module>
		<module>KaroEval</module>
		<module>KaroExperiments</module>
		<module>KaroMUSKEL-Java</module>
	</modules>

	<developers>
		<developer>
			<name>ultimate</name>
		</developer>
	</developers>
	
	<profiles>
		<profile>
			<id>fullInstall</id>
			<build>
				<plugins>
					<plugin>
						<!-- create a jar file with the sources and add it to the local repo -->
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-source-plugin</artifactId>
						<version>2.1.2</version>
						<executions>
							<execution>
								<id>attach-sources</id>
								<goals>
									<goal>jar-no-fork</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
					<plugin>
						<!-- create a jar file with the javadoc and add it to the local repo -->
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-javadoc-plugin</artifactId>
						<version>2.8</version>
						<executions>
							<execution>
								<id>attach-javadoc</id>
								<goals>
									<goal>jar</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

	<properties>
    	<maven.compiler.source>1.8</maven.compiler.source>
    	<maven.compiler.target>1.8</maven.compiler.target>
  
		<ultimate.KaroAPI4J.version>1.0</ultimate.KaroAPI4J.version>
		<ultimate.KaroEval.version>3.0</ultimate.KaroEval.version>
		<ultimate.KaroExperiments.version>0.1</ultimate.KaroExperiments.version>
		<ultimate.KaroMUSKEL.version>3.0</ultimate.KaroMUSKEL.version>
	</properties>
</project>
