<Configuration>
  <Appenders>
    <Console name="STDOUT" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss} %-5p [%t] %C.%M(%L) | %m%n"/>
    </Console>
    <RollingFile name="FILE" fileName="logs/karomuskel.log" filePattern="logs/karomuskel %d{yyyy-MM-dd HH-mm-ss}.log">
      <PatternLayout pattern="%d{HH:mm:ss} %-5p [%t] %C.%M(%L) | %m%n"/>
      <Policies>
        <OnStartupTriggeringPolicy />
      </Policies>
    </RollingFile>
  </Appenders>
  <Loggers>
    <Root level="info">
      <AppenderRef ref="STDOUT"/>
      <AppenderRef ref="FILE"/>
    </Root>
    <Logger name="ultimate" level="info"/>
    <Logger name="ultimate.karopapier.eval" level="debug"/>
    <Logger name="ultimate.karopapier.cron" level="debug"/>
  </Loggers>
</Configuration>